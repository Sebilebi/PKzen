<div class="window-controls" @onmousedown:stopPropagation>
    @if (isMinimize)
    {
        <button class="minimize" title="Minimizar" @onclick="HandleMinimize">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 512 512"><path d="M64 224h384v64H64z" fill="currentColor" /></svg>
        </button>
    }
    @if (isMaximize)
    {
        <button class="maximize" title="Maximizar" @onclick="HandleMaximizeRestore">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M3 5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" /></svg>
        </button>
    }
    @if (isClose)
    {
        <button class="close" title="Salir" @onclick="HandleClose">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 6L6 18M6 6l12 12" /></svg>
        </button>
    }
</div>

@code {
    [Parameter]
    public bool isMinimize { get; set; }

    [Parameter]
    public bool isMaximize { get; set; }

    [Parameter]
    public bool isClose { get; set; }
}
